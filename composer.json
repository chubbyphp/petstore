{
    "name": "chubbyphp/petstore",
    "description": "A simple skeleton to build api's based on the chubbyphp-framework.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "chubbyphp/chubbyphp-api-http": "^3.1",
        "chubbyphp/chubbyphp-config": "^1.2",
        "chubbyphp/chubbyphp-cors": "^1.0",
        "chubbyphp/chubbyphp-deserialization": "^2.13.1",
        "chubbyphp/chubbyphp-doctrine-db-service-provider": "^1.4",
        "chubbyphp/chubbyphp-framework": "^2.3",
        "chubbyphp/chubbyphp-negotiation": "^1.2.4",
        "chubbyphp/chubbyphp-serialization": "^2.8.1",
        "chubbyphp/chubbyphp-validation": "^3.5",
        "doctrine/orm": "^2.6.4",
        "monolog/monolog": "^2.0",
        "nikic/fast-route": "^1.3",
        "ocramius/proxy-manager": "^2.2.3",
        "pimple/pimple": "^3.2.3",
        "ramsey/uuid": "^3.8",
        "slim/psr7": "^0.6",
        "swagger-api/swagger-ui": "^3.23.11",
        "symfony/console": "^4.3.5",
        "zendframework/zend-code": "^3.4"
    },
    "require-dev": {
        "chubbyphp/chubbyphp-mock": "^1.4.1",
        "friendsofphp/php-cs-fixer": "^2.15.3",
        "infection/infection": "^0.14.1",
        "mavimo/phpstan-junit": "^0.2.3",
        "nunomaduro/phpinsights": "^1.9",
        "phploc/phploc": "^5.0",
        "phpstan/extension-installer": "^1.0.1",
        "phpstan/phpstan": "^0.11.16",
        "phpunit/phpunit": "^8.4.1",
        "symfony/yaml": "^4.3.5"
    },
    "autoload": {
        "psr-4": { "App\\": "app/" }
    },
    "autoload-dev": {
        "psr-4": { "App\\Tests\\": "tests/" }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix:cs": "mkdir -p build && vendor/bin/php-cs-fixer fix --cache-file=build/phpcs.cache",
        "test:lint": "mkdir -p build && find app tests -name '*.php' -print0 | xargs -0 -n1 -P$(nproc) php -l | tee build/phplint.log",
        "test:unit": "phpdbg -qrr vendor/bin/phpunit --testsuite=Unit --coverage-text --coverage-html=build/phpunit/coverage-html --coverage-xml=build/phpunit/coverage-xml --log-junit=build/phpunit/phpunit.junit.xml --cache-result-file=build/phpunit/phpunit.result.cache",
        "test:integration": "vendor/bin/phpunit --testsuite=Integration --cache-result-file=build/phpunit/phpunit.result.cache",
        "test:infection": "vendor/bin/infection --threads=$(nproc) --min-msi=88 --verbose --coverage=build/phpunit",
        "test:static-analysis": "mkdir -p build && bash -c 'vendor/bin/phpstan analyse app --no-progress --level=7 --error-format=junit | tee build/phpstan.junit.xml; if [ ${PIPESTATUS[0]} -ne \"0\" ]; then exit 1; fi'",
        "test:loc": "mkdir -p build && vendor/bin/phploc app --verbose | tee build/phploc.log",
        "test:cs": "mkdir -p build && vendor/bin/php-cs-fixer fix --dry-run --stop-on-violation --cache-file=build/phpcs.cache",
        "test:insights": "mkdir -p build && bash -c 'vendor/bin/phpinsights analyse -v --no-interaction --min-quality=94 --disable-security-check | tee build/phpinsights.log; if [ ${PIPESTATUS[0]} -ne \"0\" ]; then exit 1; fi'",
        "test": [
            "@test:lint",
            "@test:unit",
            "@test:integration",
            "@test:infection",
            "@test:static-analysis",
            "@test:loc",
            "@test:cs",
            "@test:insights"
        ]
    }
}
